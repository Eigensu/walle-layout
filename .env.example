# ===========================================
# Fantasy11 Monorepo - Environment Variables Template
# ===========================================
# Copy this file to .env and fill in your values

# Environment
NODE_ENV=development

# ===========================================
# Frontend Configuration
# ===========================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=Fantasy11
NEXT_PUBLIC_APP_VERSION=1.0.0

# ===========================================
# Backend Configuration  
# ===========================================
DEBUG=true
SECRET_KEY=your-super-secret-key-change-this-in-production-32chars-minimum
DATABASE_URL=sqlite:///./fantasy11.db

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production-32chars-minimum
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# ===========================================
# Database Configuration (for future use)
# ===========================================
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=fantasy11
# DATABASE_USER=fantasy11_user
# DATABASE_PASSWORD=your_password

# ===========================================
# External Services (for future use)
# ===========================================
# REDIS_URL=redis://localhost:6379
# CRICKET_API_KEY=your_cricket_api_key
# PAYMENT_GATEWAY_KEY=your_payment_gateway_key
# EMAIL_SERVICE_KEY=your_email_service_key
